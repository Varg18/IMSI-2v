  <script>
  function changeTab(evt, type) {
    tablinks = document.getElementsByClassName("tablinks");
      for (i = 0; i < tablinks.length; i++) {
          tablinks[i].className = tablinks[i].className.replace(" active", "");
      }
      evt.currentTarget.className += " active";

      if(type == "Bulk")
      {
        document.getElementById("old__price").innerHTML = "75 000 ₽"
        document.getElementById("new__price").innerHTML = "69 000 ₽"
      }
      else if(type == "Oem")
      {
        document.getElementById("old__price").innerHTML = "50 000 ₽"
        document.getElementById("new__price").innerHTML = "44 000 ₽"
      }
    }
  </script>